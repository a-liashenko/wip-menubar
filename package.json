{
  "name": "Streaker",
  "description": "GitHub contribution streak tracking menubar app",
  "version": "1.1.0",
  "author": "Jamie Weavis <jamie.weavis@gmail.com>",
  "bugs": {
    "url": "https://github.com/jamieweavis/streaker/issues"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.4.2",
    "auto-launch": "^5.0.5",
    "contribution": "^2.0.0",
    "cron": "^1.4.1",
    "electron-log": "^2.2.16",
    "electron-store": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^2.0.5",
    "electron-builder": "^20.25.0",
    "eslint": "^5.2.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2"
  },
  "homepage": "https://github.com/jamieweavis/streaker#readme",
  "keywords": [
    "contribution",
    "contribution-graph",
    "electron",
    "electron-app",
    "github",
    "macos",
    "menubar",
    "streak"
  ],
  "license": "MIT",
  "main": "src/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamieweavis/streaker.git"
  },
  "scripts": {
    "dist": "build",
    "dist-win": "build -w",
    "pack": "build --dir",
    "start": "electron src/app.js",
    "lint": "eslint .",
    "fmt": "prettier --write './src/**/*.{js,html}'"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.html": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
